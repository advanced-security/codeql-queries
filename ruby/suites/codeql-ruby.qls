- description: "GitHub's Field Team Ruby Extended Suite"

- qlpack: github-queries-ruby
- exclude:
    query path:
      - /^testing\/.*/

- import: codeql-suites/ruby-security-extended.qls
  from: codeql/ruby-queries
- exclude:
    id:
      - rb/hardcoded-credentials
